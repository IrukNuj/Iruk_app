<!DOCTYPE html>
<html>
  <head>
    <title>mint</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>

      <div class="title">
        <a href="/"><img src="/mint4.png" width="150" height="70"></a>
      </div>
      <% if user_signed_in? %>
        <%# Logged in as <strong><%= current_user.email %></strong>
        <%= link_to "Logout  ", destroy_user_session_path, method: :delete, :class => "navbar-link logout" %>
        <%= link_to "Setting   ", edit_user_registration_path, :class => "navbar-link setting" %>
        <%= link_to "Post ","/post/new", :class => "navbar-link post" %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link' %>
        <%= link_to "Login", new_user_session_path, :class => 'navbar-link' %>
      <% end %>
    </header>

    <div class="contents">

      <div class="entry">
        <%= yield %>
      </div>

      <div class="aside">
        <div class="user_table">
          <% if user_signed_in? %>
            <p>Welcome!</p>
            <div class="user_icon">
              <% if current_user.image_name == nil %>
                <img src="/default_user.png" width="100" height="100">
              <% else %>

              <% end %>
            </div>
            <p>@<%= current_user.username %></p>
          <% else %>
            <p>上のアレから</p>
            <p>ログインしてくだち！！</p>
          <% end %>
        </div>
        <div class="list">
            <ul>
              <li><%= link_to("Top","/") %></li>
              <li><%= link_to("TimeLine","/post/index") %></li>
              <li>なんか</li>
              <li>なんか</li>
            </ul>
        </div>
      </div>

      <div class="clear"></div>
    </div>

    <%# ココまでレイアウトテスト用 %>

  </body>
</html>
